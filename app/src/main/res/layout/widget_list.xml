<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/widget_header_update_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/colorTextWhite"
            android:text="--:--"
            android:textAlignment="center"
            android:textStyle="bold"

            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/widget_header_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_refresh"
            tools:ignore="ContentDescription"

            android:layout_toStartOf="@id/widget_header_update_text"
            android:layout_toLeftOf="@id/widget_header_update_text"

            android:layout_margin="5dp"/>
        <ImageView
            android:id="@+id/widget_header_configure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_settings"
            tools:ignore="ContentDescription"

            android:layout_toStartOf="@id/widget_header_update"
            android:layout_toLeftOf="@id/widget_header_update"

            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/widget_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@color/colorTextWhite"
            android:text="@string/widget_title"
            android:textStyle="bold"

            android:layout_toStartOf="@id/widget_header_configure"
            android:layout_toLeftOf="@id/widget_header_configure"

            android:layout_margin="5dp"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/widget_list_stations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>